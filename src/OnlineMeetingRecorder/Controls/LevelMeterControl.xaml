<UserControl x:Class="OnlineMeetingRecorder.Controls.LevelMeterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="28">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="36"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" MinWidth="65"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ラベル -->
        <TextBlock Grid.Column="0"
                   Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   FontFamily="{StaticResource PrimaryFont}"
                   FontWeight="SemiBold"
                   FontSize="11"
                   Foreground="{StaticResource DarkCardTextSecondaryBrush}"
                   Margin="0,0,10,0"/>

        <!-- レベルバー -->
        <Border Grid.Column="1"
                Background="#333333"
                CornerRadius="4"
                Height="8"
                VerticalAlignment="Center">
            <Grid>
                <!-- RMSレベル (Toki-Pink グラデーション) -->
                <Border x:Name="RmsBar"
                        Background="{Binding LevelBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CornerRadius="4"
                        HorizontalAlignment="Left"
                        Width="{Binding RmsBarWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <!-- ピークインジケーター -->
                <Border Background="{StaticResource DarkCardTextBrush}"
                        Width="2"
                        HorizontalAlignment="Left"
                        Margin="{Binding PeakMargin, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CornerRadius="1"
                        Opacity="0.5"/>
            </Grid>
        </Border>

        <!-- dB表示 -->
        <TextBlock Grid.Column="2"
                   Text="{Binding DbText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontFamily="{StaticResource MonoFont}"
                   FontSize="11"
                   Foreground="{StaticResource DarkCardTextSecondaryBrush}"
                   Margin="8,0,4,0"/>

        <!-- ステータスバッジ -->
        <Border Grid.Column="3"
                Background="{Binding StatusBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CornerRadius="8"
                Padding="8,3"
                VerticalAlignment="Center"
                Margin="4,0,0,0">
            <TextBlock Text="{Binding StatusText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontFamily="{StaticResource PrimaryFont}"
                       FontSize="10"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
